<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.hooversmithmobileinnovations.ghost.PlayerSelectionLocalScreenActivity"
    android:background="@drawable/playerselectionland">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/HLinearLayout1">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageViewBlueGhost"
            android:src="@drawable/grayghostnt"
            android:layout_marginTop="10dp"
            android:onClick="cyclePlayerType" />

        <EditText
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextPlayer1Name"
            android:layout_weight="1"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            android:maxLength="8"
            android:text="\@string/Player1"
            android:textColor="#fff" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/HLinearLayout1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/HLinearLayout2">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageViewRedGhost"
            android:src="@drawable/grayghostnt"
            android:layout_marginTop="10dp"
            android:onClick="cyclePlayerType" />

        <EditText
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextPlayer2Name"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            android:maxLength="8"
            android:text="@string/Player2"
            android:layout_weight="1"
            android:textColor="#fff" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/HLinearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/HLinearLayout3">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageViewGreenGhost"
            android:src="@drawable/grayghostnt"
            android:layout_marginTop="10dp"
            android:onClick="cyclePlayerType" />

        <EditText
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextPlayer3Name"
            android:textSize="30sp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:maxLength="8"
            android:text="\@string/Player3"
            android:textColor="#fff" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/HLinearLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/HLinearLayout4">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageViewOrangeGhost"
            android:src="@drawable/grayghostnt"
            android:layout_marginTop="10dp"
            android:onClick="cyclePlayerType" />

        <EditText
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextPlayer4Name"
            android:textSize="30sp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:maxLength="8"
            android:text="\@string/Player4"
            android:textColor="#fff" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            style="@style/standard_button_playerselectionscreen_landscape"
            android:background="@drawable/letterbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Language"
            android:id="@+id/buttonLanguage"
            android:onClick="onButtonClickedLocalSelectionScreen"
            android:layout_weight="0.5" />

        <Button
            style="@style/standard_button_playerselectionscreen_landscape"
            android:background="@drawable/letterbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/StartGame"
            android:id="@+id/buttonStartGame"
            android:onClick="onButtonClickedLocalSelectionScreen"
            android:layout_weight="0.5" />
    </LinearLayout>

</RelativeLayout>
