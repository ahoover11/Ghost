<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.hooversmithmobileinnovations.ghost.ResultsActivity"
    android:background="@drawable/playerselectionland">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Final Scores"
        android:id="@+id/textViewFinalScores"
        android:textSize="35sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/textViewFinalScores"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/imageViewBlueGhost"
            android:src="@drawable/blueghost"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Player 1"
            android:id="@+id/textViewPlayer1Name"
            android:layout_weight="0.50"
            android:gravity="center"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="GHOST"
            android:id="@+id/textViewPlayer1Score"
            android:layout_weight="0.40"
            android:gravity="center"
            android:textColor="#ffffff" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout5"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout3">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/imageViewOrangeGhost"
            android:src="@drawable/orangeghost"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Player 4"
            android:id="@+id/textViewPlayer4Name"
            android:gravity="center"
            android:layout_weight="0.50"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="GHOST"
            android:id="@+id/textViewPlayer4Score"
            android:gravity="center"
            android:layout_weight="0.40"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout4"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/linearLayout2">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/imageViewRedGhost"
            android:src="@drawable/redghost"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Player 2"
            android:id="@+id/textViewPlayer2Name"
            android:gravity="center"
            android:layout_weight="0.50"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="GHOST"
            android:id="@+id/textViewPlayer2Score"
            android:layout_weight="0.40"
            android:gravity="center"
            android:textColor="#ffffff" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout5"
        android:layout_below="@+id/linearLayout4"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/imageViewGreenGhost"
            android:src="@drawable/greenghost"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Player 3"
            android:id="@+id/textViewPlayer3Name"
            android:layout_weight="0.50"
            android:gravity="center"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="GHOST"
            android:id="@+id/textViewPlayer3Score"
            android:layout_weight="0.40"
            android:gravity="center"
            android:textColor="#ffffff" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/NewGame"
            android:id="@+id/buttonNewGame"
            android:background="@drawable/letterbutton"
            style="@style/standard_button_resultsscreen_landscape"
            android:onClick="onButtonClickedResultsScreen"
            android:layout_weight="0.5"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home Screen"
            android:id="@+id/buttonHomeScreen"
            style="@style/standard_button_resultsscreen_landscape"
            android:background="@drawable/letterbutton"
            android:onClick="onButtonClickedResultsScreen"
            android:layout_weight="0.5"/>
    </LinearLayout>

</RelativeLayout>
