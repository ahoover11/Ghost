<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.hooversmithmobileinnovations.ghost.RulesActivity"
    android:background="@drawable/test3land">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Rules"
        android:id="@+id/textViewRules"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="60sp"
        android:textColor="#ffffff"
        android:layout_marginBottom="5dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/HlinearLayout7">

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/Back"
            android:id="@+id/buttonBack"
            style="@style/standard_button_rulessscreen_portrait"
            android:background="@drawable/letterbutton"
            android:layout_marginTop="5dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/textViewRules"
        android:layout_above="@+id/HlinearLayout7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollViewRules"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewRulesTitle"
                    android:text="@string/RulesTitle"
                    android:textColor="#ff56bcff"
                    android:gravity="center_horizontal"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/RulesPlayerTurns"
                    android:textColor="#ffff26b0"
                    android:id="@+id/textViewPlayerTurns"
                    android:gravity="center_horizontal"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Rules1"
                    android:textColor="#ffff26b0"
                    android:id="@+id/textViewRules1"
                    android:gravity="center_horizontal"
                    android:textSize="20sp"
                    android:layout_marginBottom="5dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/RulesChallenges"
                    android:textColor="#ff3bff00"
                    android:id="@+id/textViewRulesChallenges"
                    android:gravity="center_horizontal"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Rules2"
                    android:textColor="#ff3bff00"
                    android:id="@+id/textViewRules2"
                    android:gravity="center_horizontal"
                    android:textSize="20sp"
                    android:layout_marginBottom="5dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/RulesAck"
                    android:textColor="#ffffd800"
                    android:id="@+id/textViewRulesAck"
                    android:gravity="center_horizontal"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Rules3"
                    android:textColor="#ffffd800"
                    android:id="@+id/textViewRules3"
                    android:gravity="center_horizontal"
                    android:textSize="20sp"
                    android:layout_marginBottom="5dp" />


            </LinearLayout>

        </ScrollView>



    </RelativeLayout>
</RelativeLayout>
