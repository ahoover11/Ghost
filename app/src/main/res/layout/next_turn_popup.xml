<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/popupPlayerTextView"
        android:layout_gravity="center_horizontal"
        android:textSize="45dp"
        android:textStyle="bold"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageViewGhost"
        android:src="@drawable/blueghost"
        android:longClickable="false"
        android:layout_below="@+id/textViewGhost"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="Ghost Image"/>

    <Button
        style="@style/standard_button_popup"
        android:background="@drawable/letterbutton"
        android:text="@string/StartTurn"
        android:id="@+id/popupButton"
        android:onClick="popupButton"
        android:layout_width="150dp"
        android:textColor="#000"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

</LinearLayout>