<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".HomeScreenActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/VLinearLayout1">

        <Button
            style="@style/standard_button2"
            android:background="@drawable/letterbutton"
            android:text="@string/NewGame"
            android:id="@+id/buttonLocalGame"
            android:layout_gravity="center_horizontal"
            android:textColor="#000"
            android:layout_width="150dp"
            android:layout_centerHorizontal="true"
            android:onClick="onButtonClickedHomeScreen" />

        <Button
            style="@style/standard_button2"
            android:background="@drawable/letterbutton"
            android:text="@string/Rules"
            android:id="@+id/buttonRules"
            android:layout_gravity="center_horizontal"
            android:textColor="#000"
            android:layout_width="150dp"
            android:onClick="onButtonClickedHomeScreen" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/GHOST"
        android:id="@+id/textViewGhost"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="60sp"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:id="@+id/imageViewGhost"
        android:src="@drawable/blueghost"
        android:longClickable="false"
        android:layout_below="@+id/textViewGhost"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

</RelativeLayout>
