<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".HomeScreenActivity"
    android:background="@drawable/test3">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/VLinearLayout1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="48dp">

        <Button
            style="@style/standard_button_homescreen_portrait"
            android:background="@drawable/letterbutton"
            android:text="@string/NewGame"
            android:id="@+id/buttonNewGame"
            android:layout_gravity="center_horizontal"
            android:layout_width="150dp"
            android:layout_centerHorizontal="true"
            android:onClick="onButtonClickedHomeScreen" />

        <Button
            style="@style/standard_button_homescreen_portrait"
            android:background="@drawable/letterbutton"
            android:text="@string/Rules"
            android:id="@+id/buttonRules"
            android:layout_gravity="center_horizontal"
            android:layout_width="150dp"
            android:onClick="onButtonClickedHomeScreen" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/GHOST"
        android:id="@+id/textViewGhost"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="60sp"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff" />

    <ImageView
        android:layout_width="185dp"
        android:layout_height="185dp"
        android:id="@+id/imageViewGhost"
        android:src="@drawable/blueghost"
        android:longClickable="false"
        android:layout_above="@+id/VLinearLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp" />

</RelativeLayout>
