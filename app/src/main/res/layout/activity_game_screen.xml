<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.hooversmithmobileinnovations.ghost.GameScreenActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout2">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal">


            <Button
                style="@style/button_text"
                android:background="@drawable/letterbutton"
                android:text="Q"
                android:id="@+id/Q" />

            <Button
                style="@style/button_text"
                android:background="@drawable/letterbutton"
                android:text="W"
                android:id="@+id/W"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                style="@style/button_text"
                android:background="@drawable/letterbutton"
                android:text="E"
                android:id="@+id/E"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                style="@style/button_text"
                android:background="@drawable/letterbutton"
                android:text="R"
                android:id="@+id/R"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                style="@style/button_text"
                android:background="@drawable/letterbutton"
                android:text="T"
                android:id="@+id/T"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                style="@style/button_text"
                android:background="@drawable/letterbutton"
                android:text="Y"
                android:id="@+id/Y"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                style="@style/button_text"
                android:background="@drawable/letterbutton"
                android:text="U"
                android:id="@+id/U"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                style="@style/button_text"
                android:background="@drawable/letterbutton"
                android:text="I"
                android:id="@+id/I"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                style="@style/button_text"
                android:background="@drawable/letterbutton"
                android:text="O"
                android:id="@+id/O"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                style="@style/button_text"
                android:background="@drawable/letterbutton"
                android:text="P"
                android:id="@+id/P"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal">

            <Button
                style="@style/button_text"
                android:background="@drawable/letterbutton"
                android:text="A"
                android:id="@+id/A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                style="@style/button_text"
                android:background="@drawable/letterbutton"
                android:text="S"
                android:id="@+id/S"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                style="@style/button_text"
                android:background="@drawable/letterbutton"
                android:text="D"
                android:id="@+id/D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                style="@style/button_text"
                android:background="@drawable/letterbutton"
                android:text="F"
                android:id="@+id/F"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                style="@style/button_text"
                android:background="@drawable/letterbutton"
                android:text="G"
                android:id="@+id/G"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                style="@style/button_text"
                android:background="@drawable/letterbutton"
                android:text="H"
                android:id="@+id/H"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                style="@style/button_text"
                android:background="@drawable/letterbutton"
                android:text="J"
                android:id="@+id/J"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                style="@style/button_text"
                android:background="@drawable/letterbutton"
                android:text="K"
                android:id="@+id/K"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                style="@style/button_text"
                android:background="@drawable/letterbutton"
                android:text="L"
                android:id="@+id/L"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal">

            <Button
                style="@style/button_text"
                android:background="@drawable/letterbutton"
                android:text="Z"
                android:id="@+id/Z"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                style="@style/button_text"
                android:background="@drawable/letterbutton"
                android:text="X"
                android:id="@+id/X"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                style="@style/button_text"
                android:background="@drawable/letterbutton"
                android:text="C"
                android:id="@+id/C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                style="@style/button_text"
                android:background="@drawable/letterbutton"
                android:text="V"
                android:id="@+id/V"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                style="@style/button_text"
                android:background="@drawable/letterbutton"
                android:text="B"
                android:id="@+id/B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                style="@style/button_text"
                android:background="@drawable/letterbutton"
                android:text="N"
                android:id="@+id/N"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                style="@style/button_text"
                android:background="@drawable/letterbutton"
                android:text="M"
                android:id="@+id/M"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:weightSum="4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Player1"
                android:layout_weight="1"
                android:id="@+id/textViewPlayer1Name"
                android:background="@drawable/grid"
                android:textSize="18sp"
                android:textColor="#000"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Ghost"
                android:id="@+id/textViewPlayer1Score"
                android:background="@drawable/grid"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textColor="#000"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Player2"
                android:background="@drawable/grid"
                android:id="@+id/textViewPlayer2Name"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textColor="#000"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Ghost"
                android:background="@drawable/grid"
                android:id="@+id/textViewPlayer2Score"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textColor="#000"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:weightSum="4" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Player3"
                android:layout_weight="1"
                android:id="@+id/textViewPlayer3Name"
                android:background="@drawable/grid"
                android:textSize="18sp"
                android:textColor="#000"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Ghost"
                android:id="@+id/textViewPlayer3Score"
                android:layout_weight="1"
                android:background="@drawable/grid"
                android:textSize="18sp"
                android:textColor="#000"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Player4"
                android:id="@+id/textViewPlayer4Name"
                android:background="@drawable/grid"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textColor="#000"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Ghost"
                android:id="@+id/textViewPlayer4Score"
                android:background="@drawable/grid"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textColor="#000"
                android:gravity="center_horizontal" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/DefaultWord"
        android:id="@+id/textViewCurrentWord"
        android:textSize="60sp"
        android:textStyle="bold"
        android:typeface="normal"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#000"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/linearLayout"
        android:layout_above="@+id/relativeLayout" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/relativeLayout">

        <Button
            style="@style/standard_button"
            android:background="@drawable/letterbutton"
            android:text="@string/Submit"
            android:id="@+id/buttonSubmit"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="130dp"
            android:textColor="#000" />

        <Button
            style="@style/standard_button"
            android:background="@drawable/letterbutton"
            android:text="@string/Challenge"
            android:id="@+id/buttonChallenge"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_width="130dp"
            android:textColor="#000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/DefaultLetter"

            android:id="@+id/textViewCurrentLetter"
            android:textSize="40sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textColor="#ffff050e"
            android:gravity="center_vertical"
            android:layout_marginBottom="15dp" />
    </RelativeLayout>

</RelativeLayout>
